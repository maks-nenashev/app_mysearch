<div class="field has-addons">
  <div class="control">
    <div class="select is-fullwidth">
     
          <%= search_form_for @q do |f| %>
          <%= f.select :local_id_eq, @locals.map { |t| [t.title, t.id] }, required: false , class:"input" %>
      
     <!br>
     <div class="buttons are-small"> 
     <%= f.submit "Шукати!", class:"button is-primary"%>
    <% end %>
  </div>
   </div>
    </div>
    <%= link_to "Показати всi оголошення!",articles_path, class:"button is-danger is-inverted" %> <!Prawelnaja ssylka>
  <!/div>
</div>
