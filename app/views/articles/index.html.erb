<br>
<br>    
<br>
<p>
<strong><%= link_to "Нове оголошення!", new_article_path,class: "button is-warning is-rounded"%></strong>
<!%= link_to "New article", new_article_path, class: "button big gray bi bi-pencil-square"%>
</p>

<br>
<% @articles.each do |article| %>
     <article class="card mt-3">
     <div class="card-body">
  
  <h3>
  <%= article.title %>
  </h3>
  <p class="my-2">
  <%= image_tag article.image, style: "width: 360px; height: auto" %>            
  </p>          
  <h4 class="my-2">
  <%= article.text %>
  </h4>
        <section class="card-text">
           <! Podkluchenie time pod soobzheniem!>
  <time datetime="<%= article.created_at.strftime("%Y-%m-%d %H:%M:%S")%>">
  <%= article.created_at.strftime("%Y-%m-%d %H:%M:%S") %>
  </time>  
           </section>            
   <!hr>
                     <!Ssylka na statью>
     <%= link_to  "Показати", article_path(article),class: "button is-primary is-light"%>  
     <%= link_to  "Редагувати", edit_article_path(article),class: "button is-success is-light"%> 
     <%= link_to 'Видалити', article_path(article), data: {'turbo-method': :delete,'turbo-confirm': 
     'Are you sure?'}, class:"button is-danger is-light"%>
                    
                       <! rails routes>                         <!Eto JS window "Udalit post">
  
            
     </div>
   </article>
<% end %>
