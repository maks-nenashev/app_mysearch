<%= form_for :article, url: articles_path, method: "article" do %>

<br>
<br>
<div class="field is-link">
  <p class="control has-icons-left">
    <span class="select">
         
<%= select(:article,:local_id, options_from_collection_for_select(@locals, "id","title", @article.present? ? @article.local_id : nil ), {}) %>
       
    </span>
    <span class="icon is-small is-left">
      <i class="fas fa-globe"></i>
    </span>
  </p>
</div>

<div class="mb-3 row">
<div class="col-sm-2 col-form-label">  
    <%= label(:article, :title) %>
  </div>

<div class="col-sm-10">         
    <%= text_field(:article, :title, class: "input is-link") %>
  </div>
  </div>


<div class="field">
  <label class="label">Message</label>
  <div class="control">
    <%= text_area(:article, :text, class: "textarea is-focused") %>
  </div>
</div>

<br>
<div class="col-sm-10">     
    <%= file_field(:article, :avatar, class: "button is-warning")%>
  </div>
<br>
  
  <%= submit_tag 'Submit article', class: "button is-primary is-rounded"%>
  <%= link_to "Show all articles!",articles_path, class:"button is-danger is-inverted" %> <!Prawelnaja ssylka>

<%end%>

<br>
<br>
