<%= form_for :article, url: articles_path, data: {turbo:false}  do |f| %>


<!%= render 'shared/errors', object: @article %> <!Walidacija - papka shared/_errors>
<!% if @article && @article.errors.full_messages.any?%> <!Prowerka! Esli estj ochybka to nepropustit>
<!% end%>
<br>
<br>
<div class="field is-link">
  <p class="control has-icons-left">
    <span class="select">
      <select>
        <option selected>Область</option>
        <option value="Киевская">Киевская</option>
        <option value="Сумская">Сумская</option>
        <option value="Черниговская">Черниговская</option>
      </select>
    </span>
    <span class="icon is-small is-left">
      <i class="fas fa-globe"></i>
    </span>
  </p>
</div>

<div class="mb-3 row">
<div class="col-sm-2 col-form-label">  
    <%= f.label :title %>
</div>

<div class="col-sm-10">          <! Walidacija CSS ---required: true, minlength:2,>
    <%= f.text_field :title, placeholder: "Title", class: "input is-link"%>
</div>
</div>

<div class="mb-3 row">
<div class="col-sm-2 col-form-label">
    <%= f.label :text %>
</div>

<div class="col-sm-10">     <! Walidacija CSS ---required: true, minlength:2,>
    <%= f.text_area :text, placeholder: "Text", class: "textarea is-focused"%>
</div>
</div>

<br>
<div class="col-sm-10">     
    <%= f.file_field :avatar, class: "button is-warning"%>
</div>
<br>
  

  <%= f.submit 'Submit article', class: "button is-primary is-rounded"%>
  <%= link_to "Show all articles!",articles_path, class:"button is-danger is-inverted" %> <!Prawelnaja ssylka>

<%end%>

<br>
