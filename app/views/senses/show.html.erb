 <h4><%= @sense.title %></h4>
 
 <%= image_tag @sense.image, style: "width: 380px; height: auto" %>
 
 <p class="lead my-3"><%= @sense.text %></p>
  
             
             <! Podkluchenie time pod soobzheniem!>
  <time datetime="<%= @sense.created_at.strftime("%Y-%m-%d %H:%M:%S")%>">
  <%= @sense.created_at.strftime("%Y-%m-%d %H:%M:%S") %>
  </time>  
<%= link_to ('Редагувати'), edit_sense_path(@sense),class: "button is-success is-light"%> 
<%= link_to ('Видалити'), sense_path(@sense), data: {'turbo-method': :delete,'turbo-confirm': 
     'Are you sure?'}, class:"button is-danger is-light"%>
<%= link_to "Показати всi оголошення!",senses_path, class:"button is-danger is-inverted" %> 

<!/////////////////////////////////////////////////////////////////////////////////////////>
  <hr class="my-3">
<h4> Write youre Comment </h4>
  
                      <!Dobawil Comment>
  <%= form_with model: [@commentable, @comment] do |f| %>

  <div class="mb-3 row">
    <div class="col-sm-2 col-form-label">
      <%= f.label :body %>
    </div>

    <div class="col-sm-10">                     <! Walidacija CSS ---required: true, minlength:2,>
      <%= f.text_area :body, class: 'textarea is-focused', required: true, minlength:2%>
    </div>
  </div>

 <br>
  <%= f.submit "Submit comment!", class: 'button is-primary is-rounded' %>
<% end %>
<!%end%>

<!/////////////////////////////////////////////////////////////////////////////////////>
<h4 class="mt-5">Comment!</h4>

<% @commentable.comments.each do |comment| %>
  <article class="mb-3 card" id="comment-<%= comment.id %>">
      <div class="card-body">
           <! Podkluchenie time pod soobzheniem!>
  <time datetime="<%= @sense.created_at.strftime("%Y-%m-%d %H:%M:%S")%>">
  <%= @sense.created_at.strftime("%Y-%m-%d %H:%M:%S") %>
  </time>  
         
         <section class="card-text">
                  <p>
                    <%= comment.body %>
                  </p>
         </section>
              
 
 <%= link_to  "Редагувати", edit_sense_comment_path(@sense, comment),class: "button is-success is-light"%> 
 <%= link_to 'Видалити', sense_comment_path(@sense, comment), class: 'button is-danger is-light',
      data: {method: :delete, confirm: "Are you sure?"} %>
   
   </div>
 </article>
<%end%>
