<h2 class="mb-4">List of articles!</h2>  <!# Wywod wsech zapisej!>

<div class="field is-link">
  <p class="control has-icons-left">
    <span class="select">
      <select>
       
        <% @locals.each do |local|%>
     <option value="<%= local.id %>"> <%= local.title %></option>
    <% end %>
    
     </select>
    </span>
    <span class="icon is-small is-left">
      <i class="fas fa-globe"></i>
    </span>
  </p>
</div>

<p>
<%= link_to "New article", new_thing_path,class: "button is-primary is-rounded" %>
</p>
<% @things.each do |thing| %>
     <article class="card mt-3">
     <div class="card-body">
  <h2>
  <%= thing.title %>
  </h2>
  <p class="my-2">
  <!%= image_tag thing.avatar.url(:thumb), class: 'img-thumbnail thumb' if thing.avatar? %>            
  </p>          
  <h4 class="my-2">
  <%= thing.text %>
  </h4>
        <section class="card-text">
           <! Podkluchenie time pod soobzheniem!>
  <time datetime="<%= thing.created_at.strftime("%Y-%m-%d %H:%M:%S")%>">
  <%= thing.created_at.strftime("%Y-%m-%d %H:%M:%S") %>
  </time>  
           </section>            
   <hr>
                     <!Ssylka na statью>
  <p><!%= link_to "New article", new_article_path(article),class: "btn btn-primary" %> 
     <%= link_to  "Show article", thing_path(thing),class: "button is-primary is-light"%>  
     <%= link_to  "Edit article", edit_thing_path(thing),class: "button is-success is-light"%> 
     <%= link_to 'Delete', thing_path(thing), data: {'turbo-method': :delete,'turbo-confirm': 
     'Are you sure?'}, class:"button is-danger is-light"%>
                    
                       <! rails routes>                         <!Eto JS window "Udalit post">
  
            
     </div>
   </article>
<% end %>
